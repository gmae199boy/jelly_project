    <body>
        <%- include('partials/navbar') %>
        <div class="section">
            <div class="header">
                <h1> My page </h1>
            </div>

            <div class="profile-section">
                <div class="profile-info">이름: <%= user.name %></div>
                <div class="profile-info">이메일: <%= user.email %></div>

            </div>


            <ul class="nav nav-tabs">
                <li role="presentation" id="my-item-btn" class="active"><a href="#">내가 기부한 펀딩 목록</a></li>
                <li role="presentation" id="join-item-btn"><a href="#">현재 진행중인 펀딩</a></li>
                <!-- <li role="presentation"><a href="#">완료한 프로젝트</a></li> -->
            </ul>
            

            <div id="my-item">
                <% if (user.myProducts !== null){user.myProducts.forEach((product)=>{ %>
                    <div class="list-group" style="margin-bottom: 0px !important;">
                        <a href="/product?<%= product.productId %>" class="list-group-item">
                            <h4 class="list-group-item-heading"><%= product.name %> </h4>
                            <p class="list-group-item-text"><%= product.amount %></p>
                        </a>
                    </div>
                <%  })} %>
            </div>

