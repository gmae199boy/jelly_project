<html>
    <head> 
        <%- include('partials/head') %>

        <script type="text/javascript">

            function oneCheckbox(a){
        
                var obj = document.getElementsByName("userType");
        
                for(var i=0; i<obj.length; i++){
        
                    if(obj[i] != a){
        
                        obj[i].checked = false;
        
                    }
        
                }
        
            }
        
        </script>
    </head>

    <body>
        <div class="login-section">
            <div class="header">
                <h1>Sign Up</h1>
                <h2>회원가입하세요!</h2>
            </div>
            <hr>
            <form class="login-form" aciton="/join" method="POST">

                    <input type="checkbox" name="userType" value="0" onclick="oneCheckbox(this)">
                    <label for = "donor"> donor </label>
                    <input type="checkbox" name="userType" value="1" onclick="oneCheckbox(this)">
                    <label for = "recipient"> recipient </label> <br>


                <input class="newitem-form" type="text" name="name" placeholder="name을 입력하세요"> <br>
                <input class="newitem-form" type="text" name="email" placeholder="email을 입력하세요"> <br>
                <input class="newitem-form" type="password" name="password" placeholder="password을 입력하세요"> <br>
                <input class="btn btn-warning newitem-btn" type="submit">
            </form>
        </div>
    </body>

</html>